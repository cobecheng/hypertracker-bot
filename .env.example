# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Whitelisted User ID (optional)
# Only this user's notifications will be sent to TRADES_CHAT_ID/LIQUIDATIONS_CHAT_ID
# Other users will receive notifications in their private chat
# Leave empty to send all users' notifications to the group (not recommended)
WHITELISTED_USER_ID=

# Notification Destinations (chat_id or chat_id:thread_id for topics)
# For trades (fills, deposits, withdrawals) - leave empty to send to user's private chat
TRADES_CHAT_ID=
# For liquidations - leave empty to send to user's private chat
LIQUIDATIONS_CHAT_ID=

# Example: Send to a group
# TRADES_CHAT_ID=-1001234567890
# Example: Send to a specific topic in a group (supergroup)
# TRADES_CHAT_ID=-1001234567890:12345

# Database Configuration
DATABASE_PATH=./data/hypertracker.db

# WebSocket Configuration
HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws
HYPERLIQUID_REST_URL=https://api.hyperliquid.xyz/info
CHAOS_LABS_WS_URL=wss://data.chaoslabs.xyz/ws/liquidations

# Performance Settings
WS_RECONNECT_DELAY=1
WS_MAX_RECONNECT_DELAY=60
WS_PING_INTERVAL=20
WS_PING_TIMEOUT=10

# Logging
LOG_LEVEL=INFO
